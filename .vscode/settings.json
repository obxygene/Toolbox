{
  // UI and editor tweaks
  "editor.minimap.enabled": false,
  "workbench.list.smoothScrolling": false,
  "workbench.tree.indent": 4,
  "workbench.startupEditor": "none",
  "workbench.iconTheme": null,
  "breadcrumbs.enabled": false,
  "editor.suggestOnTriggerCharacters": false,
  "editor.parameterHints.enabled": false,
  "editor.inlineSuggest.enabled": false,
  "editor.hover.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.semanticHighlighting.enabled": false,
  "editor.codeLens": false,
  "editor.occurrencesHighlight": "off",
  "editor.inlayHints.enabled": "off",
  // Indentation: fix to 4 spaces (no auto-detection)
  "editor.detectIndentation": false,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,

  // Limit concurrent work and caching
  "workbench.editor.enablePreview": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 5,
  "files.maxMemoryForLargeFilesMB": 64,
  "search.followSymlinks": false,
  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,
  "scm.diffDecorationsGutterWidth": 1,

  // Telemetry and crash reporter (reduce background usage)
  "telemetry.telemetryLevel": "off",

  // Disable auto-fetch and heavy git features for large repos
  "git.autofetch": false,
  "git.decorations.enabled": false,
  "git.enabled": true,
  "git.openDiffOnClick": false,

  // File watcher tuning for Windows
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/out/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },

  // Disable validation/features for languages not used here
  "javascript.validate.enable": false,
  "typescript.validate.enable": false,
  "typescript.preferences.includePackageJsonAutoImports": "off",

  // Notebook perf
  "notebook.output.textLineLimit": 2000,
  "notebook.experimental.useMarkdownRenderer": false,

  // LaTeX Workshop: disable auto build
  "latex-workshop.latex.autoBuild.run": "never",
  "latex-workshop.latex.autoClean.run": "onBuilt",
  // Use SumatraPDF as the external viewer with forward search
  "latex-workshop.view.pdf.viewer": "external",
  "latex-workshop.view.pdf.external.viewer.command": "D:\\General Program Files\\SumatraPDF\\SumatraPDF.exe",
  "latex-workshop.view.pdf.external.viewer.args": [
    "-reuse-instance",
    "-forward-search",
    "%TEX%",
    "%LINE%",
    "-inverse-search",
    "code -g \"%f:%l\"",
    "%PDF%"
  ],
  "latex-workshop.view.outline.sections": [
    "part",
    "chapter",
    "section",
    "subsection"
  ],

  // Python
  "python.analysis.typeCheckingMode": "off",
  "python.analysis.memory.keepLibraryAst": false,
  "python.languageServer": "Pylance",
  "python.analysis.inlayHints.functionReturnTypes": false,

  // MatLab/Octave extensions (if installed)
  "matlab.mlintpath": "",
  "matlab.linter.run": "off",

  // Extensions general
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,

  // Workbench perf
  "workbench.enableExperiments": false,
  "editor.largeFileOptimizations": true
}
